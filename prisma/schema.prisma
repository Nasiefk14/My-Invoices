generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              Int       @id @default(autoincrement())
  username        String    @unique
  password        String
  invoicesCreated Invoice[] @relation("UserInvoices")
}

model Customer {
  id        Int       @id @default(autoincrement())
  name      String
  address   String
  city      String
  phone     String
  email     String?
  vatNumber String?
  invoices  Invoice[]
}

model Item {
  id               Int           @id @default(autoincrement())
  name             String
  packSize         Int
  defaultPackPrice Float
  pricePerUnit     Float?
  invoiceItems     InvoiceItem[]
}

model Invoice {
  id            Int           @id @default(autoincrement())
  invoiceNumber Int           @unique
  customerId    Int
  date          DateTime      @default(now())
  total         Float
  taxType       String
  pdfPath       String?
  items         InvoiceItem[]
  customer      Customer      @relation(fields: [customerId], references: [id])
  createdBy     User          @relation("UserInvoices", fields: [createdById], references: [id])
  createdById   Int
}

model InvoiceItem {
  id            Int     @id @default(autoincrement())
  invoiceId     Int
  itemId        Int
  quantityPacks Int
  packPrice     Float
  invoice       Invoice @relation(fields: [invoiceId], references: [id])
  item          Item    @relation(fields: [itemId], references: [id])

  @@unique([invoiceId, itemId])
}
